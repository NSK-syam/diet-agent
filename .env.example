# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-bot-token-from-botfather

# AI Provider (choose one: ollama, groq, gemini, rule_based)
AI_PROVIDER=ollama

# Ollama (local - default)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Groq (optional - free tier)
GROQ_API_KEY=your-groq-api-key

# Google Gemini (optional - free tier)
GEMINI_API_KEY=your-gemini-api-key

# Notification Settings (24-hour format)
MORNING_PLAN_TIME=07:00
EVENING_SUMMARY_TIME=20:00
ENABLE_WATER_REMINDERS=false
WATER_REMINDER_INTERVAL=2

# Timezone
TIMEZONE=America/New_York
